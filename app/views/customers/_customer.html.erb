<div class="card">
  <div class="card-content">
    <h4><%= customer.full_name %></h4>
    <% if customer.image.present? %>
      <%= image_tag(customer.image, width: '200') %>
    <% end %>
    <p><b>Province:</b> <%= customer.notes %></p>
    <p><%= customer.phone_number %></p>
    <p><%= customer.email_address %></p>
  </div>
</div>